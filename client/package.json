{
  "name": "wendte-budget",
  "version": "0.1.0",
  "private": false,
  "proxy": "http://localhost:3333/",
  "dependencies": {
    "axios": "^0.18.0",
    "prop-types": "^15.6.2",
    "react": "^16.7.0-alpha.0",
    "react-dom": "^16.7.0-alpha.0",
    "react-scripts-ts": "3.1.0",
    "react-spring": "^5.9.2",
    "styled-components": "^4.0.2"
  },
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "coverage": "react-scripts-ts test --env=jsdom --coverage"
  },
  "devDependencies": {
    "@types/faker": "^4.1.4",
    "@types/jest": "^23.3.8",
    "@types/node": "^10.12.0",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/styled-components": "^4.0.3",
    "faker": "^4.1.0",
    "jest-watch-typeahead": "^0.2.0",
    "react-testing-library": "^5.2.3",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/**/*.ts",
      "src/**/*.tsx",
      "!src/registerServiceWorker.js",
      "!src/index.js",
      "!src/utils/colors.js",
      "!src/utils/mixins.js",
      "!src/utils/fakeData.js",
      "!src/utils/api.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 70,
        "lines": 80
      }
    }
  }
}
